#!/usr/bin/env mkb

# Quick Project

if {{ option use_prebuilt }}
{
    subproject "$MARMALADE_ROOT/quick/quick_prebuilt"
}
else
{
    subproject "$MARMALADE_ROOT/quick/quick"
}

options
{
    s3e-data-dir = resources
    app-icf = 'resources/common.icf,resources/app.icf'
    builddir = build_temp
}

files
{
    (resources)
    .
}

assets
{
	(resources)
	.
	
    [common]
    (resources)
    quicklua/dbg.lua
    quicklua/openquick.lua
    quicklua/QConfig.lua
    
	config.lua
    fonts
    textures
    sounds
	
	Utility.lua
    NodeUtility.lua
    VirtualResolution.lua
	Globals.lua
	Counter.lua
	MenuScene.lua
	
	["distribution"] # use precompiled and concatenated files for performance
	<include common>
	(resources-concatenated)
	.
}

subprojects
{
    s3eAndroidFullscreen
    IwGameController
}

deployments
{
    blackberry-author = "Nicholas Smith"
    blackberry-authorid = "gYAAgGwTu1XxMWOBWcntNTz_WcE"
    icon = "resources-deploy/wrongicon480.png"
    name = "Wrong"
    provider = "Nicholas Smith"
    #splashscreen = "splash-768x768.jpg"
    version-major = "0"
    version-minor = "1"
    version-revision = "8"
    
    # App ID for Facebook apps
    android-extra-strings='(app_id,fb_app_id)'
}
